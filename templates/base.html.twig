<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
           <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
       
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
             <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="{{ path('home') }}">Home</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="{{ path('actualites') }}">Actualités </a>
      </li>
        <li class="nav-item">
        <a class="nav-link" href="{{ path('cooptation') }}">Télécharger un fichier</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('conge') }}">Demander un congé</a>
      </li>
       <li class="nav-item">
        <a class="nav-link" href="{{ path('historique') }}">Historique</a>
      </li>
    </ul>
     {% if not app.user %}
<a class="nav-link" href="{{path('security_login')}}">Connexion</a>
       {% else %}
        <a class="nav-link" href="{{path('security_logout')}}">Déconnexion</a>
      {% endif %}
      <br/>
  </div>
</nav>
    </head>
    <body>
        {% block body %}
  
        {% endblock %}
    </body>
</html>
